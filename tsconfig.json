{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react",
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": true,
    "rootDir": "src",
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "src/*.test.*"
  ]
}
