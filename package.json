{
  "name": "pure-store",
  "version": "0.3.5",
  "description": "A tiny immutable store with type safety.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/gunn/pure-store",
  "author": "Arthur Gunn",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "prepublish": "yarn test && yarn build",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "((\\.|/)test)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "coveralls": "^3.0.2",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.5",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "immer": ">=1.8.0 <4.0.0"
  }
}
